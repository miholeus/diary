# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[Makefile]
indent_style = space

[*.{css,html,js,json,yml}]
indent_size = 4

[*.{rst,txt}]
indent_style = 3

# South migration files don't use final newlines
[**/migrations/*.py]
insert_final_newline = sometimes...
